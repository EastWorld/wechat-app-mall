.function-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #E4393C;
  display: block;
}

.function-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.function-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
}

.function-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
  display: block;
}

.function-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

