  background: #fff;
  margin: 0;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-left: 52rpx;
  border-left: 6rpx solid #E4393C;
  display: block;
}

.work-section .menu-item {
