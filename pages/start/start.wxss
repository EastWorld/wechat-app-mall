.container {
  height:100vh;  
}
.swiper-container{
  width: 100vw;
  height:100vh;  
}
.swiper_box {
  width: 100vw;
  height:100vh;
}

swiper-item image {
  width:100%;
  height:100vh;
  display: inline-block;
  overflow: hidden;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 50rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}
