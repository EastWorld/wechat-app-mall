/**index.wxss**/

.container {
  background-color: #F2f2f2;
  min-height: 100%
}
.swiper-container{
  width: 750rpx;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:350rpx;  /* 562.5 */
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:350rpx;  /* 562.5 */
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 20rpx;  
  height: 10rpx;  
  background: #fff;  
  border-radius: 5%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 10rpx;  
  opacity: 1;
}
.type-container{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 6rpx solid #fff;
}
.type-item-on{
  border-bottom: 6rpx solid #e64340;
}

