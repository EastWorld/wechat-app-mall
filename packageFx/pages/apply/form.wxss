page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.apply-container {
  min-height: 100vh;
  padding: 40rpx 32rpx 60rpx;
  position: relative;
}

/* 顶部装饰背景 */
.header-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  top: 200rpx;
  left: -80rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 100rpx;
  left: 50%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translateY(-30rpx) scale(1.1);
    opacity: 0.5;
  }
}

/* 头部区域 */
.header-section {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 60rpx 0 50rpx;
}

.icon-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.icon-circle {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 25rpx 70rpx rgba(0, 0, 0, 0.2);
  }
}

.icon-text {
  font-size: 70rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 1rpx;
}

/* 表单卡片 */
.form-card {
  position: relative;
  z-index: 1;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
}

.card-inner {
  position: relative;
}

/* 邀请人信息 */
.referrer-section {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}

.referrer-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.referrer-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 26rpx;
  color: #8b6914;
  font-weight: 500;
}

.referrer-value {
  font-size: 32rpx;
  color: #664d03;
  font-weight: bold;
  padding-left: 44rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 36rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-label .label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.item-label .label-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}

.required-star {
  color: #ff6b6b;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.item-input {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  color: #333333;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.item-input:focus {
  background: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.placeholder-style {
  color: #b8bbc6;
}

/* 权益说明 */
.benefits-section {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
  padding: 0 10rpx;
}

.benefit-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.benefit-icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
}

.benefit-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.5;
  font-weight: 500;
}

/* 提交按钮 */
.submit-wrapper {
  position: relative;
  z-index: 1;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 16rpx 40rpx rgba(245, 87, 108, 0.4);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.submit-btn:active::before {
  left: 100%;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 12rpx 30rpx rgba(245, 87, 108, 0.3);
}

.btn-text {
  font-size: 34rpx;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-right: 12rpx;
}

.btn-arrow {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  animation: arrowMove 1.5s ease-in-out infinite;
}

@keyframes arrowMove {
  0%, 100% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(8rpx);
  }
}

/* 底部提示 */
.footer-tips {
  position: relative;
  z-index: 1;
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 1rpx;
}