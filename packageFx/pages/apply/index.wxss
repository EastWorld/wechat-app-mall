page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.apply-status-container {
  min-height: 100vh;
  position: relative;
}

/* 顶部装饰背景 */
.header-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  top: 200rpx;
  left: -80rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 100rpx;
  left: 50%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translateY(-30rpx) scale(1.1);
    opacity: 0.5;
  }
}

/* 状态容器 */
.status-wrapper {
  position: relative;
  z-index: 1;
  padding: 40rpx 32rpx 60rpx;
}

/* 头部区域 */
.header-section {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.icon-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.icon-circle {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: pulse 2s ease-in-out infinite;
}

.icon-circle.pending {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
}

.icon-circle.reject {
  background: linear-gradient(135deg, #ff7675 0%, #d63031 100%);
}

.icon-circle.success {
  background: linear-gradient(135deg, #55efc4 0%, #00b894 100%);
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 25rpx 70rpx rgba(0, 0, 0, 0.2);
  }
}

.icon-text {
  font-size: 70rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 2rpx;
}

.title.success-title {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 1rpx;
}

/* 权益卡片 */
.benefits-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
}

.benefit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 32rpx;
}

.benefit-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.benefit-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.benefit-content {
  flex: 1;
  padding-top: 8rpx;
}

.benefit-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.benefit-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

/* 状态卡片 */
.status-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
}

.status-card.reject-card {
  border: 2rpx solid #ff7675;
}

.status-card.success-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border: 2rpx solid #00b894;
}

.status-info {
  position: relative;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 30rpx;
  font-weight: bold;
}

.pending-text {
  color: #fdcb6e;
}

.reject-text {
  color: #d63031;
}

.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #e0e0e0, transparent);
  margin: 16rpx 0;
}

.tips-box {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tips-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.remark-box {
  padding: 24rpx;
  background: #fff5f5;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.remark-label {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.remark-text {
  display: block;
  font-size: 28rpx;
  color: #d63031;
  line-height: 1.6;
}

/* 恭喜内容 */
.congrats-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.congrats-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
}

.congrats-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.congrats-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

/* 按钮组 */
.action-wrapper {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 主要按钮 */
.primary-btn {
  width: 100%;
  min-height: 120rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 16rpx 40rpx rgba(245, 87, 108, 0.4);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  padding: 20rpx 40rpx;
}

.primary-btn.single {
  flex-direction: row;
  min-height: 100rpx;
  padding: 0 40rpx;
}

.primary-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.primary-btn:active::before {
  left: 100%;
}

.primary-btn:active {
  transform: scale(0.98);
  box-shadow: 0 12rpx 30rpx rgba(245, 87, 108, 0.3);
}

.primary-btn .btn-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 2rpx;
  line-height: 1.2;
}

.primary-btn .btn-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
  line-height: 1.2;
}

.btn-arrow {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  margin-left: 12rpx;
  animation: arrowMove 1.5s ease-in-out infinite;
}

@keyframes arrowMove {
  0%, 100% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(8rpx);
  }
}

/* 次要按钮 */
.secondary-btn {
  width: 100%;
  min-height: 120rpx;
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 16rpx 40rpx rgba(253, 203, 110, 0.4);
  transition: all 0.3s ease;
  padding: 20rpx 40rpx;
}

.secondary-btn:active {
  transform: scale(0.98);
  box-shadow: 0 12rpx 30rpx rgba(253, 203, 110, 0.3);
}

.secondary-btn .btn-text {
  font-size: 32rpx;
  color: #8b6914;
  font-weight: bold;
  letter-spacing: 2rpx;
  line-height: 1.2;
}

.secondary-btn .btn-subtitle {
  font-size: 24rpx;
  color: rgba(139, 105, 20, 0.8);
  margin-top: 8rpx;
  line-height: 1.2;
}

/* 轮廓按钮 */
.outlined-btn {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  padding: 0;
}

.outlined-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.85);
}

.outlined-btn .btn-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
  letter-spacing: 2rpx;
}